<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTempoAtual.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <StackLayout Spacing="10" Margin="10">

                <Button x:Name="btn_getLoaction" Text="Obter Localização" Clicked="btn_getLoaction_Clicked"/>

                <Label Text="Latitude:"/>
                <Entry x:Name="lbl_latitude" Text="37,421998333333335"/>

                <Label Text="Longitude:"/>
                <Entry x:Name="lbl_longitude" Text="-122,084"/>

                <Button x:Name="btn_placemark" Text="Obter Placemark" Clicked="btn_placemark_Clicked"/>

                <Label x:Name="lbl_reverso" Text="Dados gerais de local"/>

                <Button x:Name="btn_getReport" Text="Obter Previsao do Tempo" Clicked="btn_getReport_Clicked"/>

                <Label x:Name="lbl_previsao"/>
            </StackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
